# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# User specific aliases and functions
export JAVA_HOME=/usr/java/jdk1.7.0_21/
export DAEMON_USER=mapredadmin

export HADOOP_CONF_DIR=/home/${DAEMON_USER}/etc
export HADOOP_HOME=/opt/hadoop
export HADOOP_LOG_DIR=/home/${DAEMON_USER}/log
export HADOOP_PID_DIR=/home/${DAEMON_USER}/run
export PATH=$PATH:/opt/hadoop/bin/:/opt/hadoop/sbin/:/usr/java/jdk1.7.0_21/bin/
export HADOOP_YARN_HOME=/opt/hadoop/
export HADOOP_YARN_USER=${DAEMON_USER}
export YARN_LOG_DIR="/home/${DAEMON_USER}/log"
